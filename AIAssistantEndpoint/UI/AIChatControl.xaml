<UserControl x:Class="AIAssistantEndpoint.UI.AIChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIAssistantEndpoint.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="400"
             Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0" Background="#2196F3" Margin="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="🤖 AI Assistant" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" />
                <Button x:Name="SettingsButton" Content="⚙️" Background="Transparent" Foreground="White" BorderThickness="0" Width="30" Height="30" Click="SettingsButton_Click" ToolTip="Открыть настройки" />
                <Button x:Name="ClearButton" Content="🗑️" Background="Transparent" Foreground="White" BorderThickness="0" Width="30" Height="30" Click="ClearButton_Click" ToolTip="Очистить чат" />
            </StackPanel>
        </Grid>

        <!-- Сообщения -->
        <ListBox x:Name="MessagesListBox" Grid.Row="1" Background="#FAFAFA" BorderThickness="0" Margin="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10,5" Padding="10" Background="White" CornerRadius="5" BorderBrush="#EEEEEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding SenderName}" FontWeight="Bold" Foreground="{Binding SenderColor}" FontSize="11" />
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="#333333" Margin="0,5,0,0" />
                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" FontSize="10" Foreground="#999999" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Ввод -->
        <Grid Grid.Row="2" Background="White" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputTextBox" Grid.Column="0" Padding="10" Margin="10,10,10,10" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1" VerticalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" KeyDown="InputTextBox_KeyDown" Foreground="#333333" />
            <Button x:Name="SendButton" Grid.Column="1" Content="Отправить" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SendButton_Click" IsEnabled="False" Margin="0,10,10,10" />
        </Grid>

        <!-- Статус -->
        <StatusBar Grid.Row="3" Background="#F5F5F5" Padding="10,0">
            <TextBlock x:Name="StatusTextBlock" Text="Подключение..." Foreground="#666666" VerticalAlignment="Center" />
        </StatusBar>
    </Grid>
</UserControl>
