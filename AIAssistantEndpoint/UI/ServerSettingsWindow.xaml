<Window
    x:Class="AIAssistantEndpoint.UI.ServerSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIAssistantEndpoint.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Настройки AI Assistant"
    Width="500"
    Background="#F5F5F5"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <StackPanel Margin="15" VerticalAlignment="Stretch">
        <TextBlock
            Margin="0,0,0,15"
            FontSize="14"
            FontWeight="Bold"
            Foreground="#333333"
            Text="Настройки подключения к AI серверу" />

        <Label
            Content="URL сервера:"
            FontWeight="Bold"
            Foreground="#333333" />
        <TextBox
            x:Name="ServerUrlTextBox"
            Height="32"
            Margin="0,0,0,10"
            Padding="8"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Foreground="#333333" />

        <Label
            Content="Agent Access ID:"
            FontWeight="Bold"
            Foreground="#333333" />
        <TextBox
            x:Name="AgentAccessIdTextBox"
            Height="32"
            Margin="0,0,0,10"
            Padding="8"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Foreground="#333333" />

        <Label
            Content="Proxy Source (x-proxy-source):"
            FontWeight="Bold"
            Foreground="#333333" />
        <TextBox
            x:Name="ProxySourceTextBox"
            Height="32"
            Margin="0,0,0,10"
            Padding="8"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Foreground="#333333" />

        <Label
            Content="API ключ:"
            FontWeight="Bold"
            Foreground="#333333" />
        <PasswordBox
            x:Name="ApiKeyPasswordBox"
            Height="32"
            Margin="0,0,0,10"
            Padding="8"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1" />

        <CheckBox
            x:Name="UseSSLCheckBox"
            Margin="0,0,0,10"
            Content="Использовать SSL/TLS (HTTPS)"
            Foreground="#333333"
            IsChecked="True" />

        <Label
            Content="Таймаут (мс):"
            FontWeight="Bold"
            Foreground="#333333" />
        <TextBox
            x:Name="TimeoutTextBox"
            Height="32"
            Margin="0,0,0,15"
            Padding="8"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Foreground="#333333"
            Text="30000" />

        <Button
            x:Name="TestConnectionButton"
            Height="35"
            Margin="0,0,0,10"
            Background="#2196F3"
            Click="TestConnectionButton_Click"
            Content="Проверить соединение"
            FontWeight="Bold"
            Foreground="White" />

        <TextBlock
            x:Name="StatusTextBlock"
            Height="40"
            Margin="0,0,0,15"
            Foreground="#666666"
            TextWrapping="Wrap" />

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Background="#4CAF50"
                Click="OkButton_Click"
                Content="Сохранить"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                x:Name="CancelButton"
                Width="100"
                Height="35"
                Background="#F44336"
                Click="CancelButton_Click"
                Content="Отмена"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
    </StackPanel>
</Window>
