<Window x:Class="AIAssistantEndpoint.UI.ServerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:AIAssistantEndpoint.UI"
        mc:Ignorable="d"
        Title="Настройки AI Assistant"
        Width="500"
        Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <StackPanel Margin="15" VerticalAlignment="Stretch">
        <TextBlock Text="Настройки подключения к AI серверу" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15" />
        
        <Label Content="URL сервера:" FontWeight="Bold" Foreground="#333333" />
        <TextBox x:Name="ServerUrlTextBox" Height="32" Margin="0,0,0,10" Padding="8" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Foreground="#333333" />
        
        <Label Content="API ключ:" FontWeight="Bold" Foreground="#333333" />
        <PasswordBox x:Name="ApiKeyPasswordBox" Height="32" Margin="0,0,0,10" Padding="8" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" />
        
        <CheckBox x:Name="UseSSLCheckBox" Margin="0,0,0,10" Content="Использовать SSL/TLS (HTTPS)" IsChecked="True" Foreground="#333333" />
        
        <Label Content="Таймаут (мс):" FontWeight="Bold" Foreground="#333333" />
        <TextBox x:Name="TimeoutTextBox" Height="32" Margin="0,0,0,15" Padding="8" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Text="30000" Foreground="#333333" />
        
        <Button x:Name="TestConnectionButton" Height="35" Margin="0,0,0,10" Background="#2196F3" Click="TestConnectionButton_Click" Content="Проверить соединение" Foreground="White" FontWeight="Bold" />
        
        <TextBlock x:Name="StatusTextBlock" Height="40" Margin="0,0,0,15" Foreground="#666666" TextWrapping="Wrap" />
        
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="OkButton" Width="100" Height="35" Margin="0,0,10,0" Background="#4CAF50" Click="OkButton_Click" Content="Сохранить" Foreground="White" FontWeight="Bold" />
            <Button x:Name="CancelButton" Width="100" Height="35" Background="#F44336" Click="CancelButton_Click" Content="Отмена" Foreground="White" FontWeight="Bold" />
        </StackPanel>
    </StackPanel>
</Window>
