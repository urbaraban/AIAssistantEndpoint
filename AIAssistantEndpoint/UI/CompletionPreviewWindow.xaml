<Window x:Class="AIAssistantEndpoint.UI.CompletionPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Completion Preview" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBox x:Name="PreviewTextBox" Grid.Row="0" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" FontFamily="Consolas" FontSize="12" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="AcceptButton" Content="Accept" Width="100" Margin="0,0,10,0" Click="AcceptButton_Click" IsEnabled="False" />
            <Button x:Name="RejectButton" Content="Reject" Width="100" Click="RejectButton_Click" />
        </StackPanel>
    </Grid>
</Window>
